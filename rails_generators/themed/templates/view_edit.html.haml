.block
  .secondary-navigation
    %ul
      %li.first
        = link_to 'List', <%= controller_routing_path %>_path
      %li
        = link_to 'New', new_<%= singular_controller_routing_path %>_path
      %li.active
        = link_to 'Edit', edit_<%= singular_controller_routing_path %>_path
    .clear
  .content
    %h2.title
      Edit
      <%= model_name %>
    .inner
      - form_for @<%= model_name.downcase  %>, :url => <%= singular_controller_routing_path %>_path(@<%= resource_name %>), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
